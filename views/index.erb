<h3>List of files:</h3>

<% if session[:message] %>
  <p><%= session.delete(:message) %></p>
<% end %>

<ul>
  <% @files.each do |file| %>
    <!-- trim extension from file name -->
    <% path = File.basename(file, File.extname(file)) %>
    <li><a href="/<%= file %>"><%= file %></a>&nbsp;&nbsp;<a href="/<%= file %>/edit">Edit</a></li>
  <% end %>
</ul>
